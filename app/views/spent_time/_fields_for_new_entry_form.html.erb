<div id='fields_for_new_entry_form'>

  <%= l(:label_issue) %>
  <% if (@project.blank?) %>
    <%= select_tag('issue_id', "<option value='-1'>-</option>") %>
  <% else %>
    <%= select_tag('issue_id',
                   options_for_select([[l(:select_issues_option), 0]] + @assigned_issues.collect { |i| ["##{i.id} - #{i.subject}", i.id] })) %>
  <% end -%>
  <%= l(:label_date) %>
  <%= text_field_tag('time_entry_spent_on', '', :size => 10) %> <%= calendar_for('time_entry_spent_on') %>
  <%= l(:label_activity) %>
  <%= select(:time_entry, :activity_id, activities_for_select)%>
  <%= l(:field_hours) %>
  <%= text_field_tag('time_entry[hours]', '', :size => 6)%>
  <%= l(:field_comments) %>
  <%= text_field_tag('time_entry[comments]', '', :size => 30)%>
  <p>
    <%= submit_tag l(:button_save), :name => nil %>
    <%= link_to_function(l(:button_cancel), nil) do |page|
          page.visual_effect(:toggle_appear, "new_time_entry_form")
          page.visual_effect(:toggle_appear, "report_menu_options")
        end %>
  </p>
</div>
